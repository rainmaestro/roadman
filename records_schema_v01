CREATE TABLE sqlite_sequence(name,seq);
CREATE TABLE "devices" (
    "id" INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
    "name" TEXT NOT NULL,
    "description" TEXT,
    "purchased" TEXT,
    "model" TEXT,
    "serial" TEXT,
    "data_type" TEXT
);
CREATE TABLE "tracks" (
    "id" INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
    "device_id" INTEGER,
    "name" TEXT,
    "description" TEXT,
    "time" TEXT,
    "distance" TEXT,
    "start_time" TEXT,
    "start_lat" TEXT,
    "start_lon" TEXT,
    "end_time" TEXT,
    "end_lat" TEXT,
    "end_lon" TEXT,
    FOREIGN KEY (device_id) REFERENCES devices(id)
);
CREATE TABLE "track_segments" (
    "id" INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
    "track_id" INTEGER,
    "time" TEXT,
    "distance" TEXT,
    "start_time" TEXT,
    "start_lat" TEXT,
    "start_lon" TEXT,
    "end_time" TEXT,
    "end_lat" TEXT,
    "end_lon" TEXT,
    FOREIGN KEY (track_id) REFERENCES tracks(id)
);
CREATE TABLE "segment_points" (
    "id" INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
    "segment_id" INTEGER,
    "time" TEXT,
    "lat" TEXT,
    "lon" TEXT,
    "symbol" TEXT,
    "comment" TEXT,
    FOREIGN KEY (segment_id) REFERENCES track_segments(id)
);
CREATE TABLE "routes" (
    "id" INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
    "device_id" INTEGER,
    "name" TEXT,
    "description" TEXT,
    "time" TEXT,
    "distance" TEXT,
    "start_time" TEXT,
    "start_lat" TEXT,
    "start_lon" TEXT,
    "end_time" TEXT,
    "end_lat" TEXT,
    "end_lon" TEXT,
    FOREIGN KEY (device_id) REFERENCES devices(id)
);
CREATE TABLE "route_points" (
    "id" INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
    "route_id" INTEGER,
    "time" TEXT,
    "lat" TEXT,
    "lon" TEXT,
    "symbol" TEXT,
    "comment" TEXT,
    FOREIGN KEY (route_id) REFERENCES routes(id)
);
CREATE TABLE "waypoints" (
    "id" INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
    "name" TEXT,
    "lat" TEXT,
    "lon" TEXT,
    "symbol" TEXT,
    "comment" TEXT
);
CREATE TABLE userinfo (
    "id" INTEGER NOT NULL,
    "fname" TEXT,
    "lname" TEXT,
    "address" TEXT,
    "city" TEXT,
    "state" TEXT,
    "zip" TEXT,
    "units_type" INTEGER
);
